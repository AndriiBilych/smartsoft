{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@smartsoft001/auth-domain": ["libs/auth/domain/src/index.ts"],
      "@smartsoft001/auth-shell-app-services": [
        "libs/auth/shell/app-services/src/index.ts"
      ],
      "@smartsoft001/auth-shell-nestjs": [
        "libs/auth/shell/nestjs/src/index.ts"
      ],
      "@smartsoft001/auth-shell-angular": [
        "libs/auth/shell/angular/src/index.ts"
      ],
      "@smartsoft001/auth-shell-dtos": ["libs/auth/shell/dtos/src/index.ts"],
      "@smartsoft001/crud-domain": ["libs/crud/domain/src/index.ts"],
      "@smartsoft001/crud-shell-angular": ["libs/crud/shell/angular/src/index.ts"],
      "@smartsoft001/crud-shell-app-services": [
        "libs/crud/shell/app-services/src/index.ts"
      ],
      "@smartsoft001/crud-shell-dtos": ["libs/crud/shell/dtos/src/index.ts"],
      "@smartsoft001/crud-shell-nestjs": ["libs/crud/shell/nestjs/src/index.ts"],
      "@smartsoft001/users": ["libs/shared/users/src/index.ts"],
      "@smartsoft001/domain-core": ["libs/shared/domain-core/src/index.ts"],
      "@smartsoft001/utils": ["libs/shared/utils/src/index.ts"],
      "@smartsoft001/nestjs": ["libs/shared/nestjs/src/index.ts"],
      "@smartsoft001/angular": ["libs/shared/angular/src/index.ts"],
      "@smartsoft001/models": ["libs/shared/models/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
